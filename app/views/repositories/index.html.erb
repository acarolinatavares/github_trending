<div style="margin-top: 70px">
  <table class="table table-striped table-dark">
    <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Descriçao</th>
      <th scope="col">Estrelas</th>
      <th scope="col">Página</th>
    </tr>
    </thead>
    <tbody>
      <% @repositories.each do |r| %>
        <tr>
          <td><%= link_to r.name, repository_path(r), class: "alert-link" %></td>
          <td><%= r.description %></td>
          <td><%= r.stargazers_count %></td>
          <td><%= link_to r.html_url, r.html_url, class: "alert-link", target: :_blank %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @repositories %>
</div>